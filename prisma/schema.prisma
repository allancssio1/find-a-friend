// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id               String    @id @unique @default(uuid())
  name             String
  email            String    @unique
  password_hash    String
  phone_number     String
  name_responsible String
  street           String
  city             String
  district         String
  state            String
  address_number   String
  created_at       DateTime? @default(now())

  @@map("orgs")
}

model Pet {
  id         String   @id @unique @default(uuid())
  name       String
  about      String?
  year_old   String
  created_at DateTime @default(now())
}

model Images {
  id    String @id @unique @default(uuid())
  image String
}
